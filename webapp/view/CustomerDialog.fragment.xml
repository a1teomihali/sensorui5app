<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <SelectDialog 
        title="{i18n>titleCustomerDialog}"
        contentHeight="38.3%"
        rememberSelections="true"
        liveChange=".onCustomerSelectChange"
        resizable="true"
        draggable="true"
        items="{ 
                path: 'sensorModel>/customers',
                sorter: {path: 'name'}
                }">
            <StandardListItem title="{sensorModel>name}" />           
        </SelectDialog>
</core:FragmentDefinition>